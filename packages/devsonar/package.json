{
  "name": "devsonar",
  "version": "0.1.3",
  "type": "module",
  "description": "AI-powered error monitoring for local development",
  "license": "MIT",
  "author": "taro-hirose",
  "repository": {
    "type": "git",
    "url": "https://github.com/taro-hirose/DevSonar.git",
    "directory": "packages/devsonar"
  },
  "keywords": [
    "error-monitoring",
    "ai",
    "claude",
    "debugging",
    "developer-tools"
  ],
  "bin": {
    "devsonar": "./bin/devsonar.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "default": "./dist/register.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
